<h1>Users</h1>


  <div style="height: 50px">
  </div>

<table class="table table-hover">
     <thead> 
      <tr>
       
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 100px"><font size="3"><b>Email </b></font></td>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 50px "><font size="3"><b>Role </b></font></td>
          <td> </td>
          <td> </td>

      </tr>
     </thead>
      <tbody>
   <% @users.each do |user| %>
      <tr>
          
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 100px"><%= link_to user.email, user %></td>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 50px "><%= user.role %></td>

          <%  if current_user.role.to_s.downcase=='admin'%>

           <td style=" padding-right: 5px; padding-left: 5px;  "><b><%= link_to(image_tag("edit.png", :border => 0) , edit_user_path(user) )%></b></td>

           <td style=" padding-right: 5px; padding-left: 5px;  "><b><%= link_to(image_tag("destroy.png", :border => 0), user, confirm: 'Are you sure?', method: :delete )%></b></td>

           <% end %>


      </tr>       


        <% end %>
      </tbody>
    </table>

<br />

<%= link_to 'New User', new_user_path , :class=> 'btn  btn-custom' %>
